<div class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-md-6">
            <form action="/" method="post" class="border p-4">
                <h2 class="text-center">¡Bienvenido!</h2>
                <div class="mb-3">
                    <label for="inputEmail" class="form-label">Email</label>
                    <input type="email" class="form-control" id="inputEmail" name="Email" placeholder="correo@gmail.com"
                        required>
                </div>
                <div class="mb-3">
                    <label for="inputPassword" class="form-label">Password</label>
                    <input type="password" class="form-control" id="inputPassword" name="Password"
                        placeholder="contraseña" required pattern="^(?=.*[a-z])(?=.*[A-Z]).{8,}$"
                        title="La contraseña debe contener al menos 8 caracteres, una letra minúscula y una letra mayúscula.">
                </div>
                <button type="submit" class="btn btn-outline-success btn-block">Ingresar</button>
            </form>
        </div>
    </div>
    {{#if errorMessage}}
    <div class="alert alert-danger mt-3" role="alert">
        {{errorMessage}}
    </div>
    {{/if}}
</div>

